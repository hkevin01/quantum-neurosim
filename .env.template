# Quantum NeuroSim Environment Configuration
# Copy this file to .env and update with your actual credentials

# ============================================================================
# QUANTUM CLOUD PROVIDER CREDENTIALS
# ============================================================================

# IBM Quantum Configuration
# Get your token from: https://quantum-computing.ibm.com/
QISKIT_IBM_TOKEN=your_ibm_quantum_token_here
QISKIT_IBM_CHANNEL=ibm_quantum
QISKIT_IBM_INSTANCE=ibm-q/open/main

# AWS Braket Configuration
# Configure via AWS CLI or set these environment variables
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_BRAKET_S3_BUCKET=amazon-braket-your-bucket

# Rigetti QCS Configuration
# Get credentials from: https://qcs.rigetti.com/
QCS_API_KEY=your_rigetti_api_key
QCS_USER_ID=your_rigetti_user_id
QCS_SETTINGS_FILE_PATH=/home/quser/.qcs/settings.toml

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

POSTGRES_DB=quantum_experiments
POSTGRES_USER=quantum_user
POSTGRES_PASSWORD=quantum_pass_change_me
POSTGRES_HOST=quantum-db
POSTGRES_PORT=5432

# Database URL for applications
DATABASE_URL=postgresql://quantum_user:quantum_pass_change_me@quantum-db:5432/quantum_experiments

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================

REDIS_HOST=quantum-redis
REDIS_PORT=6379
REDIS_PASSWORD=quantum_cache_pass
REDIS_DB=0

# Redis URL for applications
REDIS_URL=redis://:quantum_cache_pass@quantum-redis:6379/0

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment: development, testing, production
QN_ENV=development

# Logging configuration
QUANTUM_LOG_LEVEL=INFO
QN_LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_change_me_in_production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# JUPYTER CONFIGURATION
# ============================================================================

JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=quantum_jupyter_token
JUPYTER_PASSWORD=

# ============================================================================
# GPU CONFIGURATION
# ============================================================================

# CUDA settings
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
QUANTUM_GPU_ENABLED=true

# cuQuantum settings
CUQUANTUM_ROOT=/opt/nvidia/cuquantum
CUTENSOR_ROOT=/opt/nvidia/cutensor

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Prometheus
PROMETHEUS_RETENTION_TIME=7d
PROMETHEUS_RETENTION_SIZE=1GB

# Grafana
GF_SECURITY_ADMIN_PASSWORD=quantum123_change_me
GF_USERS_ALLOW_SIGN_UP=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Python optimization
PYTHONOPTIMIZE=1
PYTHONUNBUFFERED=1
PIP_NO_CACHE_DIR=1

# Memory settings
QN_MAX_QUBITS=20
QN_CIRCUIT_CACHE_SIZE=1000
QN_RESULT_CACHE_TTL=3600

# Parallel processing
QN_NUM_WORKERS=4
QN_ENABLE_MULTIPROCESSING=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug mode (only for development)
DEBUG=true

# API settings
API_RATE_LIMIT=1000/hour
API_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File paths
QN_DATA_DIR=/app/data
QN_RESULTS_DIR=/app/results
QN_MODELS_DIR=/app/models
QN_CACHE_DIR=/app/cache

# ============================================================================
# DOCKER-SPECIFIC SETTINGS
# ============================================================================

# Container settings
CONTAINER_TIMEZONE=UTC
CONTAINER_USER_ID=1000
CONTAINER_GROUP_ID=1000

# Volume mount options
MOUNT_SOURCE_CODE=true
MOUNT_NOTEBOOKS=true
MOUNT_DATA=true

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=quantum-backups

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Feature flags
ENABLE_EXPERIMENTAL_ENCODERS=false
ENABLE_QUANTUM_ML_EXTENSIONS=true
ENABLE_REAL_HARDWARE_ACCESS=false
ENABLE_CIRCUIT_OPTIMIZATION=true
